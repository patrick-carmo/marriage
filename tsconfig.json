{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["ES2018", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "typeRoots": ["src/types"],
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "sourceMap": true
  },
  "include": ["src/**/*", "client/**/*", "src/types"],
  "exclude": ["node_modules", "dist"]
}
